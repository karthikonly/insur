<%= form_for(@insur_vehicle, url: create_insur_vehicle_quote_path(@quote)) do |f| %>
  <% if @insur_vehicle.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@insur_vehicle.errors.count, "error") %> prohibited this Insured Vehicle from being saved:</h2>
      <ul>
      <% @insur_vehicle.errors.full_messages.each do |message| %>
