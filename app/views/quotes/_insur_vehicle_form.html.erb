    <%= f.label :annual_mileage %>
    <%= f.number_field :annual_mileage %>
  </div>
  <div class="field">
    <%= f.label :type %>
    <%= f.select :type, options_for_select(InsurVehicle::TYPE_OPTIONS) %>
