  <div class="field">
    <%= f.label :usage %>
    <%= f.select :usage, options_for_select(InsurVehicle::USAGE_OPTIONS) %>
  </div>
    <div class="field">
    <%= f.label :anti_theft_device %>
    <%= f.select :anti_theft, options_for_select(InsurVehicle::ANTI_THEFT_OPTIONS.map {|x| [x,x]}) %>
  </div>
  <div class="actions">
    <%= f.submit "Create Insured Vehicle" %>
